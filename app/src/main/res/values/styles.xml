<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:fontFamily">@font/nunito_light</item>

        <item name="android:buttonStyle">@style/NunitoButton</item>
    </style>


    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="TabLayoutText" parent="TextAppearance.Design.Tab">

        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="textAllCaps">true</item>
        <item name="android:singleLine">true</item>

    </style>



    <style name="NunitoButton" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/nunito</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
