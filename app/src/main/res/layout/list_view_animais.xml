<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:maxHeight="250dp">


    <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageProfile"
                android:layout_width="78dp"
                android:layout_height="70dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/slider3"
                />


        <TextView
                android:id="@+id/txt_nome_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_pet2"
                android:drawablePadding="6dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15dp"
                tools:text="Nome" />

        <TextView
                android:id="@+id/txt_sexo_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:drawableLeft="@drawable/ic_pet3"
                android:drawablePadding="6dp"
                android:fontFamily="@font/nunito_regular"
                android:textColor="@color/colorPrimaryDark"

                android:textSize="15dp"
                tools:text="Sexo" />

        <TextView
                android:id="@+id/txt_bairro_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:drawableLeft="@drawable/ic_point"
                android:drawablePadding="6dp"
                android:fontFamily="@font/nunito_regular"
                android:text="Bairro"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15dp"
                tools:text="Bairro" />
        <LinearLayout
                android:layout_width="148dp"
                android:layout_height="29dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" android:gravity="center_horizontal" android:orientation="horizontal">
            <Button
                    android:id="@+id/favoritar"
                    android:layout_width="30dp"
                    android:layout_height="28dp" android:layout_marginRight="10dp"
                    android:background="@android:drawable/btn_star_big_off"
                    />
            <Button
                    android:id="@+id/ignorar"
                    android:layout_width="27dp"
                    android:layout_height="28dp"
                    android:background="@android:drawable/ic_delete"
                    />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>