<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.PerfilAnimalDoacaoActivity"
        android:background="@color/colorBackgroundIn"
        >

   <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <ImageView
                    android:src="@drawable/group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/imageView3" android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />
            <TextView
                    android:id="@+id/textView5"
                    android:layout_width="0dp" android:layout_height="wrap_content"
                    android:layout_marginStart="8dp" android:layout_marginLeft="8dp"
                    android:layout_marginTop="50dp" android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp" android:text="PARA ADOÇÃO"
                    android:textAlignment="center" android:textColor="@color/colorBackgroundIn"
                    android:textSize="@dimen/title_home"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/imageView3"
                    />
            <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
                    app:cardBackgroundColor="@color/cardview_light_background"
                    app:cardCornerRadius="@dimen/border_radius_cardView"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView5">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                    <Button
                            android:id="@+id/btn_respostaDoador"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_gravity="right"
                            android:layout_margin="9dp"
                            android:background="@drawable/ic_notifications_black_24dp" />

                    <Button
                            android:layout_gravity="right"
                            android:layout_margin="4dp"
                            android:id="@+id/outra_resposta"
                            android:layout_width="26dp"
                            android:layout_height="8dp"
                            android:background="@color/colorPattern" />

                    <ImageView
                            android:id="@+id/imageProfileA"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:layout_marginTop="12dp"
                            android:src="@drawable/mel_perfil"/>

                    <TextView
                            android:id="@+id/textView7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/nunito_bold"
                            android:textAlignment="center"
                            android:textColor="@color/colorStep1"
                            android:textSize="16sp"
                            tools:text="MEL"/>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_horizontal"
                            >

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:layout_marginTop="5dp"
                                android:fontFamily="@font/nunito_bold" android:gravity="center"
                                android:text="Raimunda Feitosa"
                                android:layout_marginRight="5dp"
                                android:textAlignment="center" android:textColor="@color/colorStep1"
                                android:textSize="13sp"/>
                        <ImageView
                                android:id="@+id/imageProfileU"
                                android:layout_width="30dp"
                                android:layout_height="match_parent" android:layout_weight="1"
                                android:src="@drawable/photo_perfil"/>
                    </LinearLayout>
                    <TextView
                            android:id="@+id/raca"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp" android:layout_marginTop="7dp"
                            android:layout_marginRight="15dp" android:drawableLeft="@drawable/ic_extra"
                            android:drawablePadding="6dp" android:fontFamily="@font/nunito_regular"
                            android:text="Vira-lata" android:textColor="@color/colorBackground"
                            android:textSize="20sp"/>
                    <TextView
                            android:id="@+id/endereco"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp" android:layout_marginTop="7dp"
                            android:layout_marginRight="15dp" android:drawableLeft="@drawable/ic_point"
                            android:drawablePadding="6dp" android:fontFamily="@font/nunito_regular"
                            android:text="Rua Barama, 116, Japiim" android:textColor="@color/colorBackground"
                            android:textSize="20sp"/>

                    <TextView
                            android:id="@+id/tamanho"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp" android:layout_marginTop="7dp"
                            android:layout_marginRight="15dp" android:drawableLeft="@drawable/ic_extra"
                            android:drawablePadding="6dp" android:fontFamily="@font/nunito_regular"
                            android:text="Pequena" android:textColor="@color/colorBackground"
                            android:textSize="20sp"/>
                    <TextView
                            android:id="@+id/tipo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp" android:layout_marginTop="7dp"
                            android:layout_marginRight="15dp" android:drawableLeft="@drawable/ic_extra"
                            android:drawablePadding="6dp" android:fontFamily="@font/nunito_regular"
                            android:text="Cadela" android:textColor="@color/colorBackground"
                            android:textSize="20sp"/>
                    <TextView
                            android:id="@+id/sexo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp" android:layout_marginTop="7dp"
                            android:layout_marginRight="15dp" android:drawableLeft="@drawable/ic_extra"
                            android:drawablePadding="6dp" android:fontFamily="@font/nunito_regular"
                            android:text="Fêmea" android:textColor="@color/colorBackground"
                            android:textSize="20sp"/>
                    <TextView
                            android:id="@+id/necessidade"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp" android:layout_marginTop="7dp"
                            android:layout_marginRight="15dp" android:drawableLeft="@drawable/ic_extra"
                            android:drawablePadding="6dp" android:fontFamily="@font/nunito_regular"
                            android:text="Nenhuma necessidade" android:textColor="@color/colorBackground"
                            android:textSize="20sp"/>
                    <TextView
                            android:id="@+id/dataNasc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:layout_marginLeft="20dp"
                            android:layout_marginTop="7dp" android:layout_marginRight="15dp"
                            android:drawableLeft="@drawable/ic_calendar" android:drawablePadding="6dp"
                            android:fontFamily="@font/nunito_regular" android:text="23/07/2018"
                            android:textColor="@color/colorBackground" android:textSize="20sp"/>
                    <TextView
                            android:id="@+id/descricao"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp" android:layout_marginTop="7dp"
                            android:layout_marginRight="15dp" android:fontFamily="@font/nunito_regular"
                            android:text="Muito companheira e carinhosa" android:textColor="@color/colorBackground"
                            android:textSize="20sp"/>
                    <Button
                            android:id="@+id/adotar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp" android:layout_marginTop="8dp"
                            android:layout_marginRight="8dp" android:background="@drawable/btn_adotar"
                            android:text="ADOTAR"/>

                    <Button
                            android:id="@+id/respostas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/btn_volunt"
                            android:text="RESPOSTAS"
                            android:visibility="visible" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </android.support.constraint.ConstraintLayout>

    </ScrollView>


</FrameLayout>