<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.DadosPetActivity">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <ImageView
                    android:src="@drawable/group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/imageView3" android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

            <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:minHeight="?attr/actionBarSize"
                    android:theme="?attr/actionBarTheme"
                    app:layout_constraintBottom_toTopOf="@+id/imageView7"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    app:title="Seu pet"
                    app:titleTextColor="@color/colorBackgroundIn"
                    tools:layout_editor_absoluteX="0dp" />

            <ImageView

                    android:id="@+id/imageView9"
                    android:layout_width="101dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/ic_adopets"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    app:cardBackgroundColor="@color/cardview_light_background"
                    app:cardCornerRadius="@dimen/border_radius_cardView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView9">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/foto_perfil_animal"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_marginTop="12dp"
                            android:src="@drawable/mel_perfil"
                            app:civ_circle_background_color="@color/colorBackground2" />

                    <TextView
                            android:id="@+id/nome_perfil_animal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/nunito_bold"
                            android:textAlignment="center"
                            android:textColor="@color/colorStep1"
                            android:textSize="16sp"
                            tools:text="MEL" />

                    <TextView
                            android:id="@+id/raca_perfil_animal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginRight="15dp"
                            android:drawableLeft="@drawable/ic_raca"
                            android:drawablePadding="6dp"
                            android:fontFamily="@font/nunito_regular"
                            android:text="Vira-lata"
                            android:textColor="@color/colorBackground"
                            android:textSize="20sp" />

                    <TextView
                            android:id="@+id/endereco_perfil_animal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginRight="15dp"
                            android:drawableLeft="@drawable/ic_point"
                            android:drawablePadding="6dp"
                            android:fontFamily="@font/nunito_regular"
                            android:text="Rua Barama, 116, Japiim"
                            android:textColor="@color/colorBackground"
                            android:textSize="20sp" />

                    <TextView
                            android:id="@+id/tamanho_perfil_animal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginRight="15dp"
                            android:drawableLeft="@drawable/ic_porte"
                            android:drawablePadding="6dp"
                            android:fontFamily="@font/nunito_regular"
                            android:text="Pequena"
                            android:textColor="@color/colorBackground"
                            android:textSize="20sp" />

                    <TextView
                            android:id="@+id/tipo_perfil_animal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginRight="15dp"
                            android:drawableLeft="@drawable/ic_tipo"
                            android:drawablePadding="6dp"
                            android:fontFamily="@font/nunito_regular"
                            android:text="Cadela"
                            android:textColor="@color/colorBackground"
                            android:textSize="20sp" />

                    <TextView
                            android:id="@+id/sexo_perfil_animal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginRight="15dp"
                            android:drawableLeft="@drawable/ic_sexo"
                            android:drawablePadding="6dp"
                            android:fontFamily="@font/nunito_regular"
                            android:text="FÃªmea"
                            android:textColor="@color/colorBackground"
                            android:textSize="20sp" />

                    <TextView
                            android:id="@+id/necessidade_perfil_animal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginRight="15dp"
                            android:drawableLeft="@drawable/ic_necessidade"
                            android:drawablePadding="6dp"
                            android:fontFamily="@font/nunito_regular"
                            android:text="Nenhuma necessidade"
                            android:textColor="@color/colorBackground"
                            android:textSize="20sp" />

                    <TextView
                            android:id="@+id/dataNasc_perfil_animal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginRight="15dp"
                            android:drawableLeft="@drawable/ic_calendar"
                            android:drawablePadding="6dp"
                            android:fontFamily="@font/nunito_regular"
                            android:text="23/07/2018"
                            android:textColor="@color/colorBackground"
                            android:textSize="20sp" />

                    <TextView
                            android:id="@+id/descricao_perfil_animal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginRight="15dp"
                            android:fontFamily="@font/nunito_regular"
                            android:text="Muito companheira e carinhosa"
                            android:textColor="@color/colorBackground"
                            android:textSize="20sp" />

                    <Button
                            android:id="@+id/editar_animal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="8dp"
                            android:background="@drawable/btn_adotar"
                            android:text="EDITAR" />

                    <Button
                            android:id="@+id/apagar_animal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/btn_volunt"
                            android:text="APAGAR" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </android.support.constraint.ConstraintLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>