<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/linear_intro_5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:onClick="trocarTela"
        android:orientation="vertical">

    <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/logo_normal" />

    <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Acredita que..."
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="18sp" />

    <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="233dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/slider4" />


    <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Ser voluntário do Adopets é fazer bem aos inúmeros bichinhos manauaras!"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="18sp" />
</LinearLayout>