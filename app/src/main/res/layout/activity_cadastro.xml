<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.CadastroActivity"
        android:background="@color/colorBackground">
  <android.support.constraint.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">
    <ImageView
            android:layout_width="543dp"
            android:layout_height="390dp" app:srcCompat="@drawable/group"
            android:id="@+id/imageView" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="365dp"
            android:layout_height="406dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="25dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3">
        <android.support.v7.widget.CardView
                android:layout_width="366dp"
                android:layout_height="match_parent"
                android:background="@drawable/common_google_signin_btn_icon_light_normal_background">
            <TextView
                    android:text="CADASTRE SUA CONTA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/title" android:textSize="18sp"
                    android:layout_marginBottom="80dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="20dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="65dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="60dp"/>
            <EditText
                    android:drawableLeft="@drawable/ic_name"
                    android:drawableStart="@drawable/ic_name"
                    android:drawablePadding="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editTextNome" android:layout_marginTop="90dp" android:layout_marginLeft="50dp"
                    android:hint="Nome Completo"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_email"
                    android:drawableStart="@drawable/ic_email"
                    android:drawablePadding="6dp"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/editTextEmail"
                    android:hint="E-mail"
                    android:layout_marginTop="165dp"
                    android:layout_marginBottom="154dp" android:layout_marginLeft="50dp"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_password"
                    android:drawableStart="@drawable/ic_password"
                    android:drawablePadding="6dp"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/editTextSenha"
                    android:layout_marginTop="240dp"
                    android:hint="Senha" android:layout_marginLeft="50dp"/>
            <Button
                    android:text="CADASTRAR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/botaoCadastrar"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="320dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="55dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@drawable/btn_login" android:layout_marginRight="70dp"/>
        </android.support.v7.widget.CardView>
    </LinearLayout>
    <ImageView
            android:layout_width="282dp"
            android:layout_height="164dp" app:srcCompat="@drawable/logo"
            android:id="@+id/imageView4" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp"
            android:paddingTop="50dp"/>
    <TextView
            android:text="Adote, doe e voluntarie-se!"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:id="@+id/textView3"
            app:fontFamily="@font/supermercadoone_regular" android:textColor="#FFFFFF" android:textSize="18sp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/imageView4" android:layout_marginLeft="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView4"/>

  </android.support.constraint.ConstraintLayout>

</ScrollView>